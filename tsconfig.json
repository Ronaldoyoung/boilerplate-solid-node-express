{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "module": "Commonjs",
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
